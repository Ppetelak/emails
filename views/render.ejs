<!DOCTYPE html>
<html lang="pt">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Visualizador de HTML</title>
  <!-- Link para o CSS do Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    #rendered-html {
      border: 1px solid #ccc;
      padding: 20px;
      margin-top: 20px;
      background-color: #f9f9f9;
    }
  </style>
</head>
<body>
  <div class="container mt-4">
    <h1 class="text-center">Visualizador de HTML Renderizado</h1>

    <!-- Botão de copiar código no topo -->
    <div class="text-center mb-3">
      <a href="/" class="btn btn-primary">Voltar à raiz</a>
      <button id="copy-button" class="btn btn-success">Copiar Código HTML</button>
    </div>

    <!-- HTML renderizado com borda -->
    <div id="rendered-html" class="text-center">
      <%- content %>
    </div>
  </div>

  <!-- Script para copiar o código HTML -->
  <script>
    document.getElementById('copy-button').addEventListener('click', function() {
      const htmlContent = document.getElementById('rendered-html').innerHTML;
      navigator.clipboard.writeText(htmlContent).then(() => {
        alert('Código copiado!');
      });
    });
  </script>

  <!-- Script do Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
